<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pago"
        android:backgroundTint="#EEEEEE"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        app:cardCornerRadius="5dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                app:srcCompat="@drawable/ic_class_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/nombreres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Materia Inscrita"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                    android:id="@+id/fechares"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:text="Profesor "
                    android:textSize="15sp" />
                    <TextView
                        android:layout_gravity="end"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=" ING Salon: 115-A"
                        android:textSize="15sp" />



                </LinearLayout>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/asientos"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="         L M M J V                    15:30 - 17:00 "
                        android:textSize="15sp" />



            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>